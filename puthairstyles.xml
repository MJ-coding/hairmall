<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="puthairstyles"
    >

    <ImageView
        android:id="@+id/Profile_Image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg4"/>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:background="#EEEEEE" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="#FFFFFF" />
    <ImageView
        android:id="@+id/trigger"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/bring2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"/>


    <ImageButton
        android:id="@+id/wc"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/wc2"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY" />

    <ImageButton
        android:id="@+id/mc"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/mc2"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"/>



    <ImageView
        android:id="@+id/hairs1id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:src="@drawable/hairs1cutout"/>
    <ImageView
        android:id="@+id/hairs2id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:src="@drawable/hairs2cutout"/>
    <ImageView
        android:id="@+id/hairs3id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:src="@drawable/hairs3cutout"/>
    <ImageView
        android:id="@+id/hairs4id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:src="@drawable/hairs4cutout"/>

    <ImageView
        android:id="@+id/hairsw1id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:src="@drawable/hairsw1cutout"
        />
    <ImageView
        android:id="@+id/hairsw2id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:src="@drawable/hairsw2cutout"
        />
    <ImageView
        android:id="@+id/hairsw3id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:src="@drawable/hairsw3cutout"
        />


    <ImageView
        android:id="@+id/hairsw4id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:src="@drawable/hairsw4cutout" />

    <ImageButton
        android:id="@+id/hair1layout"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentBottom="true"
        android:scaleType="centerInside"
        android:src="@drawable/hairs1cutout" />
    <ImageButton
        android:id="@+id/hair2layout"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/hair1layout"
        android:scaleType="centerInside"
        android:src="@drawable/hairs2cutout" />
    <ImageButton
        android:id="@+id/hair3layout"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/hair2layout"
        android:scaleType="centerInside"
        android:src="@drawable/hairs3cutout" />
    <ImageButton
        android:id="@+id/hair4layout"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/hair3layout"
        android:scaleType="centerInside"
        android:src="@drawable/hairs4cutout" />

    <!-- woman -->

    <ImageButton
        android:id="@+id/hairw1layout"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentBottom="true"
        android:scaleType="centerInside"
        android:src="@drawable/hairsw1cutout" />

    <ImageButton
        android:id="@+id/hairw2layout"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/hairw1layout"
        android:scaleType="centerInside"
        android:src="@drawable/hairsw2cutout" />
    <ImageButton
        android:id="@+id/hairw3layout"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/hairw2layout"
        android:scaleType="centerInside"
        android:src="@drawable/hairsw3cutout" />
    <ImageButton
        android:id="@+id/hairw4layout"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/hairw3layout"
        android:scaleType="centerInside"
        android:src="@drawable/hairsw4cutout" />






</RelativeLayout>




