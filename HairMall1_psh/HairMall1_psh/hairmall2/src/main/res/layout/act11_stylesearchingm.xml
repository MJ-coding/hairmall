<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--헤어스타일 검색-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="30dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:rowCount="1"
            android:columnCount="2"
            android:gravity="center"
            android:layout_marginBottom="20dp">


            <Button
                android:id="@+id/puthairstyle"
                android:textStyle="bold"
                android:text="스타일 체험해보기"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:padding="15dp"
                android:background="#DD6792"
                android:onClick="onClick"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center">

            <Button
                android:id="@+id/genman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FF94B8"
                android:text="man"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "/>


            <Button
                android:id="@+id/genwoman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FF94B8"
                android:text="woman"/>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp">

            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#000"
                android:background="@drawable/border"
                android:text="단발"
                android:id="@+id/Buttonw1"
                android:layout_gravity="fill"
                android:layout_margin="1dp"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#000"
                android:background="@drawable/border"
                android:text="숏컷"
                android:id="@+id/Button1"
                android:layout_gravity="fill"
                android:layout_margin="1dp"/>


            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#000"
                android:background="@drawable/border"
                android:text="웨이브"
                android:id="@+id/Buttonw2"
                android:layout_gravity="fill"
                android:layout_toRightOf="@id/Buttonw1"
                android:layout_margin="1dp"/>
            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#000"
                android:background="@drawable/border"
                android:text="투블럭"
                android:id="@+id/Button2"
                android:layout_gravity="fill"
                android:layout_toRightOf="@id/Button1"
                android:layout_margin="1dp"/>


            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#000"
                android:background="@drawable/border"
                android:layout_margin="1dp"
                android:text="러블리펌"
                android:id="@+id/Buttonw3"
                android:layout_gravity="fill"
                android:layout_toRightOf="@id/Buttonw2"
                />
            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#000"
                android:background="@drawable/border"
                android:layout_margin="1dp"
                android:text="포마드"
                android:id="@+id/Button3"
                android:layout_gravity="fill"
                android:layout_toRightOf="@id/Button2"
                />


            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#000"
                android:background="@drawable/border"
                android:text="히피"
                android:id="@+id/Buttonw4"
                android:layout_gravity="fill"
                android:layout_below="@id/Buttonw1"
                android:layout_margin="1dp"
                />
            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#000"
                android:background="@drawable/border"
                android:text="댄디"
                android:id="@+id/Button4"
                android:layout_gravity="fill"
                android:layout_below="@id/Button1"
                android:layout_margin="1dp"
                />


            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#000"
                android:background="@drawable/border"
                android:text="레이펌"
                android:id="@+id/Buttonw5"
                android:layout_gravity="fill"
                android:layout_below="@id/Buttonw2"
                android:layout_toRightOf="@id/Buttonw1"
                android:layout_margin="1dp"/>
            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#000"
                android:background="@drawable/border"
                android:text="쉐도우펌"
                android:id="@+id/Button5"
                android:layout_gravity="fill"
                android:layout_below="@id/Button2"
                android:layout_toRightOf="@id/Button1"
                android:layout_margin="1dp"/>


            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#000"
                android:background="@drawable/border"
                android:text="보브펌"
                android:id="@+id/Buttonw6"
                android:layout_gravity="fill"
                android:layout_toRightOf="@id/Buttonw2"
                android:layout_below="@id/Buttonw1"
                android:layout_margin="1dp"/>
            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#000"
                android:background="@drawable/border"
                android:text="가르마"
                android:id="@+id/Button6"
                android:layout_gravity="fill"
                android:layout_toRightOf="@id/Button2"
                android:layout_below="@id/Button1"
                android:layout_margin="1dp"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/refer"/>


            <!-- -->
            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:background="@drawable/danbalset"
                android:id="@+id/ImgSetw1"
                android:layout_below="@id/refer" />

            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:background="@drawable/waveset"
                android:id="@+id/ImgSetw2"
                android:layout_below="@id/refer"/>

            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:background="@drawable/lovelyset"
                android:id="@+id/ImgSetw3"
                android:layout_below="@id/refer" />

            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:background="@drawable/hippyset"
                android:id="@+id/ImgSetw4"
                android:layout_below="@id/refer" />

            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:background="@drawable/layset"
                android:id="@+id/ImgSetw5"
                android:layout_below="@id/refer" />

            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:background="@drawable/bobset"
                android:id="@+id/ImgSetw6"
                android:layout_below="@id/refer" />
            <!-- -->
            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:background="@drawable/shortset"
                android:id="@+id/ImgSet1"
                android:layout_below="@id/refer" />

            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:background="@drawable/twoblockset"
                android:id="@+id/ImgSet2"
                android:layout_below="@id/refer"/>

            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:background="@drawable/pomadeset"
                android:id="@+id/ImgSet3"
                android:layout_below="@id/refer" />

            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:background="@drawable/dandyset"
                android:id="@+id/ImgSet4"
                android:layout_below="@id/refer" />

            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:background="@drawable/shadowset"
                android:id="@+id/ImgSet5"
                android:layout_below="@id/refer" />

            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:background="@drawable/garmaset"
                android:id="@+id/ImgSet6"
                android:layout_below="@id/refer" />






        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/text_slideshow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="1sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>


