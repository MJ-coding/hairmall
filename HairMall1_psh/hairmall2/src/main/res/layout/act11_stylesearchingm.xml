<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:rowCount="1"
        android:columnCount="2"
        android:gravity="center"
        android:layout_marginBottom="20dp">

        <Button
            android:textStyle="bold"
            android:text="스타일 체험해보기"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:padding="15dp"
            android:background="#DD6792" />


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FF94B8"
            android:text="man"
            android:onClick="goto_stylesearchingm"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FF94B8"
            android:text="woman"
            android:onClick="goto_stylesearchingw"/>


    </LinearLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:rowCount="2"
        android:columnCount="3"
        android:layout_marginBottom="20dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#000"
            android:background="@drawable/border"
            android:text="숏컷"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="fill"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#000"
            android:background="@drawable/border"
            android:text="투블럭"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="fill"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#000"
            android:background="@drawable/border"
            android:text="포마드"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_gravity="fill"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#000"
            android:background="@drawable/border"
            android:text="매직"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="fill"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#000"
            android:background="@drawable/border"
            android:text="쉐도우펌"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="fill"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#000"
            android:background="@drawable/border"
            android:text="가르마"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_gravity="fill"/>

    </GridLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:rowCount="1"
        android:columnCount="3"
        android:gravity="center"
        android:layout_marginBottom="20dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/man_short_cut_1"
            android:layout_row="0"
            android:layout_column="0"/>
        <TextView
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_column="1"/>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/man_short_cut_2"
            android:layout_row="0"
            android:layout_column="2"/>


    </GridLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:rowCount="1"
        android:columnCount="3"
        android:gravity="center"
        android:layout_marginBottom="20dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/man_short_cut_3"
            android:layout_row="0"
            android:layout_column="0"/>

        <TextView
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_column="1"/>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/man_short_cut_4"
            android:layout_row="0"
            android:layout_column="2"/>


    </GridLayout>


</LinearLayout>