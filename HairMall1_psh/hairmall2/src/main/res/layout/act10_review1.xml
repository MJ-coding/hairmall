<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="4"
            android:scaleType="centerInside"
            android:src="@drawable/profile_s" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="고동환"
            android:textColor="#000"
            android:textSize="10pt"
            android:textStyle="bold" />


    </LinearLayout>

    <EditText
        android:id="@+id/write_review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="리뷰를 달아주세요:)"
        android:inputType="none"
        android:privateImeOptions="defaultInputmode=korean" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="14"
        android:gravity="top"
        >

        <TableRow>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="4"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:textSize="10pt"
                android:textColor="#000"
                android:text="코드 헤어"/>

            <EditText
                android:id="@+id/write_rank"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:gravity="center_horizontal"
                android:hint="평점"
                android:inputType="numberDecimal"
                android:textColor="#000"
                android:textSize="10pt"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/write_style"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:gravity="center_horizontal"
                android:hint="스타일"
                android:inputType="none"
                android:privateImeOptions="defaultInputmode=korean"
                android:textColor="#000"
                android:textSize="10pt"
                android:textStyle="bold" />


        </TableRow>


    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="13"
        android:gravity="top"
        android:orientation="horizontal">

        <TableRow>

            <ImageView
                android:id="@+id/register_fir_photo"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="4"
                android:scaleType="centerInside"
                android:src="@drawable/login_icon" />

            <ImageView
                android:id="@+id/register_sec_photo"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="4"
                android:scaleType="centerInside"
                android:src="@drawable/login_icon" />

            <ImageView
                android:id="@+id/register_thir_photo"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="4"
                android:scaleType="centerInside"
                android:src="@drawable/login_icon" />


        </TableRow>


    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/review_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FF94B8"
            android:text="취소"
            android:textColor="#000"
            android:textSize="10pt"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  "/>

        <Button
            android:id="@+id/save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FF94B8"
            android:text="저장하기"
            android:textColor="#000"
            android:textSize="10pt"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>