<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"    xmlns:app="http://schemas.android.com/apk/res-auto"

android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:gravity="center"
    >
<ImageView
    android:id="@+id/icon"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/icon" />

<EditText
    android:id="@+id/edit_join_email"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:inputType="textEmailAddress"
    android:ems="10"
    android:hint="이메일주소를 입력하세요" />
<EditText
    android:id="@+id/edit_join_name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:ems="10"
    android:hint="이름을 입력하세요"/>

<EditText
    android:id="@+id/edit_join_phone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:inputType="number"
    android:ems="10"
    android:hint="휴대폰번호를 -부호 없이 연속해서 입력하세요"/>

<EditText
    android:id="@+id/edit_join_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:inputType="text"
    android:ems="10"
    android:hint="아이디를 입력하세요" />
<EditText
    android:id="@+id/edit_join_pw"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:inputType="textPassword"
    android:ems="10"
    android:hint="비밀번호를 입력하세요" />
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/last">
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#FF94B8"
        android:text="가입"
        android:id="@+id/btn_join_join" />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#FF94B8"
        android:text="취소"
        android:id="@+id/btn_join_cancel" />
</LinearLayout>

<TextView
    android:id="@+id/content"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/last"
    android:layout_alignRight="@id/last"
    android:layout_marginTop="16dp"
    android:text="본인은 만14세 이상이며, 헤어몰 이용약관,개인정보제공 내용을 확인 하였으며, 동의 합니다." />
</LinearLayout>

