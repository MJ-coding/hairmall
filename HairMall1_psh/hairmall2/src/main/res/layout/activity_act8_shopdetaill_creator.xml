<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scroll_creator_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >



            <TextView
                android:id="@+id/text_creator_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center_horizontal|center_vertical"
                android:text="shop name"
                android:textSize="40dp"
                android:layout_weight="2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/imag_creator_main1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:maxWidth="135dp"
                    android:maxHeight="300dp"
                    android:src="@drawable/a"
                    android:layout_weight="2"/>

                <ImageView
                    android:id="@+id/imag_creator_main2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:adjustViewBounds="true"
                    android:maxWidth="135dp"
                    android:maxHeight="135dp"
                    android:src="@drawable/b" />

                <ImageView
                    android:id="@+id/imag_creator_main3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:maxWidth="135dp"
                    android:maxHeight="135dp"
                    android:src="@drawable/c"
                    android:layout_weight="2"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <Button
                    android:id="@+id/btn_creator_reputation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="★4.9/5"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:background="#FFFDD1DE"/>
                <Button
                    android:id="@+id/btn_creator_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="☆"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:background="#FFFDD1DE"/>
                <Button
                    android:id="@+id/btn_creator_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="전화"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:background="#FFFDD1DE"/>
                <Button
                    android:id="@+id/btn_creator_reserve"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="예약"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:background="#FFFDD1DE"/>
                <Button
                    android:id="@+id/btn_creator_review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="리뷰작성"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:background="#FFFDD1DE"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="메뉴"
                android:textSize="30dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center_horizontal|center_vertical"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/imag_creator_menu1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/i"
                    android:maxWidth="100dp"
                    android:maxHeight="100dp"
                    android:adjustViewBounds="true"
                    android:layout_weight="2"/>
                <ImageView
                    android:id="@+id/imag_creator_menu2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/j"
                    android:maxWidth="100dp"
                    android:maxHeight="100dp"
                    android:adjustViewBounds="true"
                    android:layout_weight="2"/>
                <ImageView
                    android:id="@+id/imag_creator_menu3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/k"
                    android:maxWidth="100dp"
                    android:maxHeight="100dp"
                    android:adjustViewBounds="true"
                    android:layout_weight="2"/>
                <ImageView
                    android:id="@+id/imag_creator_menu4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/l"
                    android:maxWidth="100dp"
                    android:maxHeight="100dp"
                    android:adjustViewBounds="true"
                    android:layout_weight="2"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="리뷰"
                android:layout_weight="1"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center_horizontal|center_vertical"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="3">
                <ImageView
                    android:id="@+id/imag_creator_review1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/d"
                    android:maxWidth="100dp"
                    android:maxHeight="100dp"
                    android:adjustViewBounds="true"
                    android:layout_weight="2"/>
                <ImageView
                    android:id="@+id/imag_creator_review2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/review1"
                    android:maxWidth="100dp"
                    android:maxHeight="100dp"
                    android:adjustViewBounds="true"
                    android:layout_weight="2"/>
                <ImageView
                    android:id="@+id/imag_creator_review3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/g"
                    android:maxWidth="100dp"
                    android:maxHeight="100dp"
                    android:adjustViewBounds="true"
                    android:layout_weight="2"/>
                <ImageView
                    android:id="@+id/imag_creator_review4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/h"
                    android:maxWidth="100dp"
                    android:maxHeight="100dp"
                    android:adjustViewBounds="true"
                    android:layout_weight="2"/>


            </LinearLayout>

            <ImageView
            android:id="@+id/imag_creator_shop"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:maxWidth="135dp"
            android:maxHeight="300dp"
            android:src="@drawable/xino"
            android:layout_weight="2"/>

            <Button
                android:id="@+id/btn_creator_create"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="가게 등록하기"
                android:textSize="40dp"
                android:layout_weight="1"
                android:background="#FFFDD1DE"/>

            <ImageView
                android:id="@+id/imag_creator_glidetest"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:adjustViewBounds="true"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:maxWidth="135dp"
                android:maxHeight="300dp"
                android:src="@drawable/xino"
                android:layout_weight="2"/>

            <TextView
                android:id="@+id/text_creator_glideuri"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center_horizontal|center_vertical"
                android:text="glideuril"
                android:textSize="10dp"
                android:layout_weight="2"/>

        </LinearLayout>

    </ScrollView>






</LinearLayout>