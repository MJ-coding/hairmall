<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--헤어스타일 검색-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="30dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:rowCount="1"
            android:columnCount="2"
            android:gravity="center"
            android:layout_marginBottom="20dp">


            <Button
                android:textStyle="bold"
                android:text="스타일 체험해보기"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:padding="15dp"
                android:background="#DD6792" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FF94B8"
                android:text="man"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "/>


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FF94B8"
                android:text="woman"/>


        </LinearLayout>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:rowCount="2"
            android:columnCount="3"
            android:layout_marginBottom="20dp"
            android:background="#FF94B8">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="fill"
                android:background="@drawable/border"
                android:gravity="center"
                android:text="단발"
                android:textColor="#000"
                android:textStyle="bold" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#000"
                android:background="@drawable/border"
                android:text="웨이브"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="fill"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#000"
                android:background="@drawable/border"
                android:text="러블리펌"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_gravity="fill"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#000"
                android:background="@drawable/border"
                android:text="매직"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_gravity="fill"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#000"
                android:background="@drawable/border"
                android:text="레이펌"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_gravity="fill"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#000"
                android:background="@drawable/border"
                android:text="보브컷"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_gravity="fill"/>

        </GridLayout>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:rowCount="1"
            android:columnCount="3"
            android:gravity="center"
            android:layout_marginBottom="20dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:src="@drawable/woman_short_cut_1"

                android:layout_row="0"
                android:layout_column="0"/>
<TextView
    android:layout_width="10dp"
android:layout_height="match_parent"
    android:layout_row="0"
    android:layout_column="1"/>
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:src="@drawable/woman_short_cut_2"
                android:layout_row="0"
                android:layout_column="2"/>


        </GridLayout>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:rowCount="1"
            android:columnCount="3"
            android:gravity="center"
            android:layout_marginBottom="20dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:src="@drawable/woman_short_cut_3"
                android:layout_row="0"
                android:layout_column="0"/>

            <TextView
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_row="0"
                android:layout_column="1"/>

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:src="@drawable/woman_short_cut_4"
                android:layout_row="0"
                android:layout_column="2"/>


        </GridLayout>


    </LinearLayout>
    <TextView
        android:id="@+id/text_slideshow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="1sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>