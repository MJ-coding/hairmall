<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="20"
    >
    <!-- 마이페이지 , 메뉴탭 -->






    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="18"
        android:weightSum="20">




    <!-- 마이페이지와 나만의 미용실 사이 공백 -->
    <!-- Text 없는 TextView = 공백-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.85"
        />

    <!-- Favorite start-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:weightSum="11"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
        />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:text="나만의 미용실"
            android:textSize="23dp"
            android:textColor="#000"
            />
    </LinearLayout>
    <!--Favorite end-->

    <!-- Favorite shop pictures start-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="horizontal"
        android:weightSum="11">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:scaleType="centerCrop"
            android:cropToPadding="true"
            android:padding="2dp"
            android:src="@drawable/xino"
            android:background="@drawable/border2gray"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:scaleType="centerCrop"
            android:cropToPadding="true"
            android:padding="2dp"
            android:src="@drawable/park"
            android:background="@drawable/border2gray"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:scaleType="centerCrop"
            android:cropToPadding="true"
            android:padding="2dp"
            android:src="@drawable/leechul"
            android:background="@drawable/border2gray"/>
    </LinearLayout>
        <!-- 헤어샵들 이름 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="11">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
            <TextView
                android:text="지노헤어"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textSize="20dp"/>
            <TextView
                android:text="박승철헤어스투디오"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="20dp"/>
            <TextView
                android:text="이철헤어커커"
                android:gravity="center"
                android:layout_width="0dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textSize="20dp"/>
        </LinearLayout>

    <!-- 공백 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        />
    <!-- reservation check -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.4"
        android:weightSum="11"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:text="예약 확인"
            android:textSize="23dp"
            android:textColor="#000"
            />
    </LinearLayout>
    <!--Reservation check end-->

    <!-- Reservation Table -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="11">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
        <TableLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:weightSum="9">

            <TableRow>
                <TextView android:text="날 짜"
                    android:background="@drawable/border_mypage"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:textSize="20dp"/>
                <TextView android:text="미 용 실"
                    android:background="@drawable/border_mypage"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:textSize="20dp"/>
                <TextView android:text="시 간"
                    android:background="@drawable/border_mypage"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:textSize="20dp"/>
            </TableRow>
            <TableRow>
                <TextView android:text="2019-10-15"
                    android:background="@drawable/border_mypage"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:textSize="20dp"/>
                <TextView android:text="지노헤어"
                    android:background="@drawable/border_mypage"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:textSize="20dp"/>
                <TextView android:text="16:30"
                    android:background="@drawable/border_mypage"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:textSize="20dp"
                   />
            </TableRow>
        </TableLayout>
    </LinearLayout>
<!-- Reservation Table end-->

        <!-- 취소 버튼 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.4"
        android:weightSum="11"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7" />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="수정"
            android:background="#FF94B8"
            android:textSize="20dp"/>
    </LinearLayout>

        <!-- 개인정보 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="개인 정보"
            android:layout_weight="10"
            android:textSize="23dp"
            android:textColor="#000"/>

    </LinearLayout>
    <!-- 이름 layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="11"
        android:orientation="horizontal"
       >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:text="이름"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#4F59"
            android:gravity="center"
            android:textSize="20dp"/>
        <TextView
            android:text="이한목"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:background="#4F59"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:textSize="20dp"/>
    </LinearLayout>
    <!-- 연락처 layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="11"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:text="연락처"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#495F"
            android:gravity="center"
            android:textSize="20dp"/>
        <TextView
            android:text="010-0100-0010"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:background="#495F"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:textSize="20dp"/>
    </LinearLayout>
    <!-- 주소 layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="11"
        android:orientation="horizontal"
       >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
        <TextView
            android:text="이메일"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#4F59"
            android:gravity="center"
            android:textSize="20dp"/>
        <TextView
            android:text="dmammmm@naver.com"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:background="#4F59"
            android:paddingLeft="5dp"
            android:gravity="center_vertical"
            android:textSize="20dp" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="11"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />
            <TextView
                android:text="비밀번호"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="#495F"
                android:gravity="center"
                android:textSize="19dp"/>
            <TextView
                android:text="*******"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:background="#495F"
                android:paddingLeft="5dp"
                android:gravity="center_vertical"
                android:textSize="20dp" />
        </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1.4"
    android:orientation="horizontal"
    android:weightSum="11">

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:text="정보 수정"
        android:background="#FF94B8"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    <Button
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:text="저  장 "
        android:background="#FF94B8"
        android:textSize="20dp"/>
</LinearLayout>





</LinearLayout>
</LinearLayout>